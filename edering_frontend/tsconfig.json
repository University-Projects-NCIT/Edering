{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "ES2017", "WebWorker"],
    "module": "ESNext",
    "forceConsistentCasingInFileNames": false,
    "strictNullChecks": true,
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "types": ["svelte"],
    "noImplicitAny": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*", "src/node_modules/**/*"],
  "exclude": ["node_modules/*", "static/*"]
}
